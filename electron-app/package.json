{
    "name": "novel-translator-pro",
    "version": "1.0.0",
    "description": "Dịch và làm mượt truyện chữ siêu nhanh với Gemini AI",
    "main": "main.js",
    "author": "Novel Translator Team",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.noveltranslator.pro",
        "productName": "Novel Translator Pro",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "web/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "web/icons/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "web/icons/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "web/icons/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "web/icons/icon.ico",
            "uninstallerIcon": "web/icons/icon.ico"
        }
    }
}