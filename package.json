{
  "name": "novel-translator-pro",
  "version": "1.0.0",
  "description": "Ứng dụng dịch truyện chuyên nghiệp với Gemini AI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable --x64"
  },
  "author": "Novel Translator Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.noveltranslator.pro",
    "productName": "Novel Translator Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!backup_old/**/*",
      "!.git/**/*",
      "!create-icon.js"
    ],
    "forceCodeSigning": false,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/icon.ico",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.exe"
    }
  }
}